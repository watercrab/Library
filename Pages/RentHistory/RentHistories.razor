@page "/rent-histories"

<PageTitle>RentHistories</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center" Style="width: 1156px">
        <RadzenRow>
            <RadzenColumn Size="12" SizeMD="6">
                    <RadzenText Text="บันทึกการ ยืม/คืน" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0; width: 1156px" TextAlign="Radzen.TextAlign.Center" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="Radzen.AlignItems.End" JustifyContent="JustifyContent.End" Gap="0.5rem" Style="width: 1156px">
                    <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
                </RadzenStack>    
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow>
            <RadzenColumn SizeMD=12 Style="display: flex">
                <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                Data="@rentHistories" TItem="LibrarySystem.Models.Library.RentHistory" RowSelect="@EditRow" Style="width: 1156px; display: inline; text-align: left">
                    <Columns>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Property="rent_id" Title="rentid">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Property="book_id" Title="bookid">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Property="user_id" Title="userid">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Property="datetime_rent" Title="datetimerent">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Property="datetime_back" Title="datetimeback">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Property="is_return" Title="isreturn">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.RentHistory" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                            <Template Context="rentHistory">
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                              Shade="Shade.Lighter" Variant="Variant.Flat"
                                              Click=@(args => GridDeleteButtonClick(args, rentHistory)) @onclick:stopPropagation="true" />
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </RadzenColumn>
        </RadzenRow>
    </RadzenRow>
</RadzenStack>
