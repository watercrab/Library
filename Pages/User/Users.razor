@page "/users"

<PageTitle>ข้อมูลสมาชิก</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center" Style="width: 1156px">
        <RadzenRow>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenText Text="ข้อมูลสมาชิก" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0; width: 1156px" TextAlign="Radzen.TextAlign.Center" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="Radzen.AlignItems.End" JustifyContent="JustifyContent.End" Gap="0.5rem" Style="width: 1156px">
                    <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow>
            <RadzenColumn SizeMD=12 Style="display: flex">
                <RadzenDataGrid @ref="grid0" ColumnWidth="auto" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                Data="@users" TItem="LibrarySystem.Models.Library.User" RowSelect="@EditRow" Style="width: 1156px; display: inline; text-align: left">
                    <Columns>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="user_id" Title="ลำดับ">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="user_code" Title="รหัสสมาชิก">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="first_name" Title="ชื่อ">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="last_name" Title="นามสกุล">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="tel" Title="เบอร์มือถือ">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="email" Title="อีเมล">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Property="login_status" Title="สถานะการยืม">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="LibrarySystem.Models.Library.User" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                            <Template Context="user">
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                              Shade="Shade.Lighter" Variant="Variant.Flat"
                                              Click=@(args => GridDeleteButtonClick(args, user)) @onclick:stopPropagation="true" />
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </RadzenColumn>
        </RadzenRow>
    </RadzenRow>
</RadzenStack>
